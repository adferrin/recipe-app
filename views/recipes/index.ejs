<%- include('../partials/header') %>
<table id="list">
    <thead>
        <tr>
            <th>Name</th>
            <th>Region</th>
            <th>Gluten Free</th>
            <th>Dairy Free</th>
            <th>Vegan</th>
        </tr>
    </thead>
<tbody>
    <% recipes.forEach(function(r) { %>
        <tr>
            <td><%= r.name %></td>
            <td><%= r.region %></td>
            <td><%= r.gluten %></td>
            <td><%= r.dairy %></td>
            <td><%= r.vegan %></td>
            <td><a href="/recipes/<%= r._id%>">Details</a></td>
        </tr>
    <% }); %>
</tbody>
</table>

<%- include('../partials/footer') %>