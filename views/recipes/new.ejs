<%- include('../partials/header') %>

<form id="new-form" action="/recipes" method="POST">
    <label>Name:</label>
    <input type="text" name="name">
    <label>Region:</label>
    <input type="text" name="region">
    <label>Please add ingredients using the ingredient link above</label>
    
        <p>
    <label>
        <input type="checkbox" class="filled-in"  name="gluten"/>
        <span>Gluten Free</span>
      </label>
    </p>
    <p>
      <label>
        <input type="checkbox" class="filled-in" name="dairy" />
        <span>Dairy Free</span>
      </label>
    </p>
    <p>
      <label>
        <input type="checkbox" class="filled-in"  name="vegan"/>
        <span>Vegan</span>
      </label>
    </p>
      <br>
    <label>Process:</label>
    <input type="text" name="process">
    <input type="submit" value="Add Recipe" style="color:rgb(8, 54, 238)">
      
</form>

<%- include('../partials/footer') %>